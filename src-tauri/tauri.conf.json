{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "control-centre",
  "version": "1.0.0",
  "identifier": "com.niri.control-centre",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../ui"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Control Centre",
        "label": "main",
        "width": 420,
        "height": 400,
        "minWidth": 380,
        "minHeight": 350,
        "resizable": false,
        "fullscreen": false,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "skipTaskbar": true,
        "visible": false,
        "focus": false,
        "center": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'; img-src 'self' data: asset:"
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "",
    "linux": {
      "deb": {
        "depends": [
          "pulseaudio-utils",
          "brightnessctl",
          "network-manager",
          "bluez-utils"
        ]
      }
    },
    "externalBin": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.png"
    ],
    "longDescription": "A beautiful macOS-style Control Centre for Niri Wayland compositor",
    "resources": [],
    "shortDescription": "Control Centre for Niri",
    "targets": "all"
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
